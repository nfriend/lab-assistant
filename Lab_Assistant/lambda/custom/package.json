{
  "name": "lab-assistant",
  "version": "0.0.1",
  "description": "An Alexa skill for managing your open-source projects hosted on GitLab.com using your voice",
  "scripts": {
    "build": "tsc",
    "build-and-translate": "npm run build && npm run translate",
    "translate": "i18next-scanner --config build/i18next-scanner.config.js 'build/**/*.js'",
    "deploy": "cd ../.. && ask deploy && cd - && npm install",
    "test": "jest",
    "test-watch": "jest --watch",
    "tslint": "tslint -c tslint.json -p .",
    "tslint-fix": "tslint -c tslint.json -p . --fix",
    "prettier": "prettier --check '**/*.ts'",
    "prettier-fix": "prettier --write '**/*.ts'",
    "lint": "npm run prettier; npm run tslint",
    "lint-fix": "npm run prettier-fix; npm run tslint-fix"
  },
  "author": "Nathan Friend",
  "license": "MIT",
  "dependencies": {
    "ask-sdk-core": "^2.6.0",
    "ask-sdk-model": "^1.18.0",
    "aws-sdk": "^2.326.0",
    "i18next": "^17.0.11",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "lodash": "^4.17.15",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "@types/i18next-sprintf-postprocessor": "^0.2.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.137",
    "@types/node": "^12.7.2",
    "@types/request-promise": "^4.1.44",
    "chalk": "^2.4.2",
    "i18next-scanner": "^2.10.2",
    "jest": "^24.9.0",
    "jest-junit-reporter": "^1.1.0",
    "lambda-local": "^1.6.3",
    "prettier": "1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3"
  }
}
